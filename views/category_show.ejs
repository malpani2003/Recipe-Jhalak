<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>" <%=category%> " Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<link rel="stylesheet" href="/style/nav.css">
<link rel="stylesheet" href="/style/footer.css">
<link rel="stylesheet" href="/style/show_food_list.css"> 


<style>

    
</style>
</head>
<body>
    <%- include("header.ejs") %>

    <div class="container">
    
    
        <h3 class="text-center my-3 " >Showing results for <em>"<%=category%>"</em></h3>
        <!-- <p class="text-center fw-bold"></p> -->
       
        <h4 class="text-center"> Total <%= list.length %> found</h4>
        <div class="row">
     
      <% list.forEach(element => { %>
        <div  class="col-lg-3  col-md-4 col-sm-6 meal">
            <img src="<%=element.strMealThumb%>" alt="">
            <h5><%= element.strMeal%></h5>
            <a href="/meal/<%=element.idMeal%>" class="btn">Get Recipe</a>
            <hr>
        </div>
    
    <% }); %>
        </div>
      
        
    </div>
    <%- include("footer.ejs") %>

</body>
</html>